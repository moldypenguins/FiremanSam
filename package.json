{
  "name": "firemansam",
  "description": "The Dumpster Fire",
  "keywords": [],
  "private": true,
  "license": "GPL-3.0",
  "version": "1.0.0-alpha",
  "repository": "github:moldypenguins/FiremanSam",
  "funding": "https://www.buymeacoffee.com/moldypenguins",
  "author": "Craig Roberts <craig.roberts@crdevel.com>",
  "type": "module",
  "engines": {
    "node": ">=18.12.1",
    "npm": ">=9.5.0"
  },
  "exports": "./FiremanSam.js",
  "scripts": {
    "dev": "node ./FiremanSam.js",
    "start": "nodemon ./FiremanSam.js"
  },
  "dependencies": {
    "dayjs": "^1.11.11",
    "discord.js": "^14.15.3",
    "html-entities": "^2.5.2",
    "isomorphic-unfetch": "^4.0.2",
    "minimist": "^1.2.8",
    "mongoose": "^8.4.1",
    "mongoose-autopopulate": "^1.1.0",
    "nodemon": "^3.1.3",
    "numeral": "^2.0.6",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@telegraf/types": "^7.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jsdoc": "^48.2.9",
    "prettier": "^3.3.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 100,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "preserve",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "globals": {
      "NodeJS": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
      {
        "env": {
          "node": true
        },
        "files": [
          ".eslintrc.{js,cjs}"
        ],
        "parserOptions": {
          "sourceType": "script"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
